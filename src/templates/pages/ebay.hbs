{{#> layout_dynamic_seo title=page.title }}
  {{> navbar}}

  {{#> hero title='Our <span class="fw-bold text-primary">eBay</span> store'}}
    <p class="lead">Computerbank sells equipment on eBay that is not useful for low-income or community groups.</p>
  {{/hero}}

  <div class="container my-5">
    <h2 class="mb-4">{{page.title}}</h2>

    {{#if data.length}}
      <div class="row">
        {{#each data}}
          {{> ebay-item}}
        {{/each}}
      </div>
    {{else}}
      <p class="text-muted">No eBay items available at the moment.</p>
    {{/if}}

  </div>

  {{> footer}}
{{/layout_dynamic_seo}}
<div class="col-6 col-md-4 col-lg-3 mb-3">
  <div class="card h-100 shadow-sm">
    <img src="{{#if image}}{{image}}{{else}}images/no-image-available.jpg{{/if}}"
         class="card-img-top"
         alt="{{name}}"
         style="height: 240px; object-fit: cover;"> <!-- Uniform image height -->

    <div class="card-body p-2">
      <h6 class="card-title text-truncate">{{name}}</h6>
      <p class="card-text small text-truncate">{{description}}</p>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between p-2">
      <span class="fw-bold text-primary small">${{price}}</span>
      <a href="https://www.ebay.com/itm/{{id}}" target="_blank" class="btn btn-sm btn-outline-primary">
        View
      </a>
    </div>
  </div>
</div>
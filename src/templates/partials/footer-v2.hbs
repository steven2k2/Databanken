<footer class="bg-light text-dark py-4">
  <div class="container">
    <div class="row">
      <!-- About Section -->
      <div class="col-md-4">
        <h5>ABOUT</h5>
        <ul class="list-unstyled">
          {{#each footerLinks}}
            <li><a href="{{this.url}}" class="text-dark">{{this.text}}</a></li>
          {{/each}}
        </ul>
      </div>

      <!-- Contact Section -->
      <div class="col-md-5">
        <h5>CONTACT</h5>
        <p><strong>Email:</strong> <a href="mailto:{{contactInfo.email}}" class="text-dark">{{contactInfo.email}}</a></p>
        <p><strong>Call:</strong> <a href="tel:{{contactInfo.phone}}" class="text-dark">{{contactInfo.phone}}</a></p>
        <p><strong>Address:</strong> {{contactInfo.address.street}}, {{contactInfo.address.city}},
          {{contactInfo.address.region}} {{contactInfo.address.postalCode}}, {{contactInfo.address.country}}</p>
      </div>

      <!-- Social Media Section -->
      <div class="col-md-3">
        <h5>FOLLOW US</h5>
        <ul class="list-unstyled">
          <li><a href="{{socialMedia.facebook}}" class="text-dark">Facebook</a></li>
          <li><a href="{{socialMedia.twitter}}" class="text-dark">Twitter</a></li>
          <li><a href="{{socialMedia.instagram}}" class="text-dark">Instagram</a></li>
          <li><a href="{{socialMedia.linkedin}}" class="text-dark">LinkedIn</a></li>
        </ul>
      </div>
    </div>

    <div class="text-center mt-4">
      <p>&copy; {{companyDetails.establishedYear}} {{siteMetadata.name}}. All Rights Reserved.</p>
    </div>
  </div>
</footer>

<!-- Bootstrap 5 JavaScript (Includes Popper.js) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


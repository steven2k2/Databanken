<div class="col-md-4 mb-4 bg-gradient">
  <div class="card h-100 shadow-sm">
    <!-- Placeholder logic for images -->
    <img src="{{#if image}}{{image}}{{else}}images/no-image-available.jpg{{/if}}"
         class="card-img-top"
         alt="{{name}}">

    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <p class="card-text">
        {{description}}
      </p>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between">
      {{#if price}}
        <span class="text-secondary small">
                    ${{price}}
                </span>
      {{/if}}
    </div>
  </div>
</div>
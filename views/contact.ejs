<%- include('partials/head') %>
<%- include('partials/jumbotron') %>
<%- include('partials/navbar') %>

<!-- Main Content -->
<div class="container my-5">
  <h1>CONTACT</h1>
  <div class="row mt-4">
    <div class="col-md-6">
      <h2>Address</h2>
      <p>
        <%= company.name %><br>
        <%= company.address.street %><br>
        <%= company.postal_code %> <%= company.address.city %><br>
        <%= company.address.region %>
      </p>
    </div>
    <div class="col-md-6">
      <h2>Contact Information</h2>
      <p>
        <strong>Phone:</strong> <%= company.phone %><br>
        <strong>Email:</strong> <a href="mailto:<%= company.email %>"><%= company.email %></a>
      </p>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <h2>Hours of Operation</h2>
      <p>Tuesday to Friday: 10:00 AM - 4:30 PM</p>
      <p>Saturday: 11:00 AM - 2:00 PM</p>
      <p>Closed Sunday and Monday</p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
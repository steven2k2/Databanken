<%- include('partials/head') %>
<%- include('partials/jumbotron') %>
<%- include('partials/navbar') %>

<!-- Main Content -->
<div class="container my-5">
  <h1>Contact</h1>
  <div class="row mt-4">
    <!-- Address Section -->
    <div class="col-md-6">
      <h2>Address</h2>
      <p>
        <%= company?.name || 'Default Company Name' %><br>
        <%= company?.address?.street || '123 Default St' %><br>
        <%= company?.postal_code || '0000' %> <%= company?.address?.city || 'Default City' %><br>
        <%= company?.address?.region || 'Default Region' %>
      </p>
    </div>

    <!-- Contact Details Section -->
    <div class="col-md-6">
      <h2>Contact</h2>
      <p>
        Phone: <%= company?.phone || '000-000-0000' %><br>
        Email: <a href="mailto:<%= company?.email || 'info@default.com' %>">
          <%= company?.email || 'info@default.com' %>
        </a>
      </p>
    </div>
  </div>

  <!-- Google Map Section -->
  <div class="row mt-5">
    <div class="col-12">
      <h2>Our Location</h2>
      <div class="map-container" style="height: 400px; overflow: hidden; position: relative;">
        <iframe
                src="<%= company.map_src %>"
                width="100%"
                height="400"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                aria-label="Company Location">
        </iframe>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
<div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
        <!-- Placeholder logic for images -->
        <img src="<%= item.image || 'images/no-image-available.jpg' %>"
             class="card-img-top"
             alt="<%= item.name %>">

        <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <ul class="list-unstyled">
                <li><strong>Processor:</strong> <%= item.processor %></li>
                <li><strong>Storage:</strong> <%= item.storage %></li>
                <li><strong>RAM:</strong> <%= item.ram %></li>
                <% if (item.screen) { %>
                    <li><strong>Screen:</strong> <%= item.screen %></li>
                <% } else if (item.monitor) { %>
                    <li><strong>Monitor:</strong> <%= item.monitor %></li>
                <% } %>
            </ul>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between">
            <span class="text-primary fw-bold">
                Concession Price: $<%= item.concessionPrice.toFixed(2) %>
            </span>
            <% if (item.fullPrice) { %>
                <span class="text-secondary small">
                    Full Price: $<%= item.fullPrice.toFixed(2) %>
                </span>
            <% } %>
        </div>
    </div>
</div>